<div class="prism-title"><h1>친구 목록</h1></div>
<div class="friend-list">
    <% if @friends.empty? %>
        친구를 초대해보세요!<br> <!-- FIXME: 버그인가 왜 줄바꿈이 안되지 -->
        <%= link_to "친구 초대하기", invitation_path %>
    <% else %>
        <!-- 전체 친구 -->
        <% @friends.each do |friend| %>
        <div class="friend-box">
            <div class="friend-box-userpage" onclick="window.location='<%= profile_path(friend.id) %>';">
                <p><%= friend.username %></p>
                <%= image_tag friend.image.url, class:"friend-box-image" %>
            </div>
        <% end %>

        <!-- 채널별 친구 -->
        <div> <!-- FIXME: 리스트 디자인이.. 엉망스가 된다 ㅠㅠ -->
            <% @channels.each do |channel| %>
                <%= channel.name %><br/>
                <% channel.friends.each do |friend| %>
                    <div class="friend-box">
                        <div class="friend-box-userpage" onclick="window.location='/userpage/<%=friend.id%>';">
                            <p><%= friend.username %></p>
                            <%= image_tag friend.image.url, :style => "height:70px; width:70px; border-radius:35px;", class:"friend-box-image" %>
                        </div>
                    </div>
                <% end %>
            <% end %>
        </div>
    <% end %>
</div>
