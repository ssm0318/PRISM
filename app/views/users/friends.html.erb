
<%= link_to "비밀번호 변경", edit_user_registration_path %>

<% @friends.each do |friend| %>
    <div style="border: 1px black solid; cursor: pointer" onclick="window.location='/userpage/<%=friend.id%>';">
        <%= friend.username %>
        <% if friend.image.blank?%> (프사 없음)
        <% else %>
            <%= image_tag friend.image.url, :style => "height:100px; width:auto;" %>
        <% end %>
        <border>
        <% friend.answers.each_with_index do |answer, i| %>
            <% if i < 3 %>
                <div>
                    <%= answer.question.content %>
                </div>
            <% end %>
        <% end %>
    </div>
<% end %>
