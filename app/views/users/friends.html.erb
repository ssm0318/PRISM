<% @friends.each do |friend| %>
    <div style="border: 1px black solid; cursor: pointer" onclick="window.location='/userpage/<%=friend.id%>';">
        <%= friend.username %>
        <%= image_tag friend.image.url, :style => "height:30px; width:30px; border-radius:15px;" %>
        <border>
        <% friend.answers.each_with_index do |answer, i| %>
            <% if i < 3 %>
                <div>
                    <%= answer.question.content %>
                </div>
            <% end %>
        <% end %>
    </div>
<% end %>
