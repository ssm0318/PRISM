<div class="profile-content-box">
<%= error %>
<%= form_for user, url: edit_user_profile_url(user) do |u| %>
    <div>
        <% u.hidden_field :id, :value => current_user.id %>

        <div>
            <%= u.label "닉네임" %>
            <%= u.text_field :username, :required => true, autocomplete: "off" %>
        </div>

        <!-- <div> -->
            <%#= u.label "Email" %>
            <%#= u.text_field :email, :required => true %>
        <!-- </div>  -->
        <br>
        <div>
            <%= u.label "생년월일" %>
            <%= u.date_field :date_of_birth %>
        </div>

        <br>
        <div>
            <%= u.label "프로필 사진 (jpg, jpeg, png, gif)" %><br>
            <%= image_tag current_user.image.url, :style => "height:40px; width:40px; border-radius:15px;" %>
            <%= u.file_field :image %>
        </div>
    <br>
        <%= u.submit "수정하기", class: "profile-button" %>
    </div>
<% end %>
</div>