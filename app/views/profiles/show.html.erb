<div class="inner-container">
<%= render partial: "profiles/layout", locals: {user: @user} %>
    <% if !@user.friends.include? current_user and @user.id != current_user.id %>
        <%= @user.username %>님과 친구가 되어보세요.
    <% else %>
    <% @feeds.each do |feed| %> 
        <div class="prism-box">
            <div class="prism-box__header">
                <%= render partial: "./user_profile", locals: {user: feed.author} %><br/>
            </div>
            <div class="prism-box__content">
                <br>
                <% if feed.is_a? Answer %>
                    <%= link_to feed.question.content, question_path(feed.question.id), class: "question" %><br><br>
                <% end %>
                <div class="answer"><%= feed.content %></div>
                <br>
                <div class = "date time"><%= time_tag feed.created_at, class: "timeago" %></div>
                <br>
            </div>
            <div class="prism-box__footer" style="padding-bottom: 10px;">
                <%= render 'feeds/my_feed', feed: feed %>
                <%= render 'likes/default', target: feed, like_btn_class: "btn-feed-like" %>
                <%= render 'drawers/default', target: feed %>
                <br>
            </div>
            <%= render 'comments/friends_form', user: @user, feed: feed %>
        </div>
        <% end %>
    <% end %>
</div>
