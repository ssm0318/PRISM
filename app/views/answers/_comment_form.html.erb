<div class="prism-box__footer" style="margin-top: 5px; border-top: 1px solid #d7dae0;">
    <div>
        댓글 <br><br>
        <div class="author-comments-div">
            <div class="comments">
                <% Comment.where(target: Answer.find(a.id), recipient_id: user.id).each do |c| %>
                    <div class="comment">
                        <%= render partial: "./user_comment_profile", locals: {user: c.author} %>
                        <span style="vertical-align: +6px;">: <%= c.content %></span>
                        <span style="vertical-align: +6px;"><%= time_tag c.created_at, class: "timeago" %></span><br>
                    </div>
                <% end %>
            </div>
            <% if current_user.id == user.id %>
                <form class="prism-form comment" action='/answers/<%= a.id %>/comments/<%= user.id %>' method='POST'>
                    <input class="prism-form__input" type='text' name='content' />
                    <input type='submit' class="prism-form__button"><br>
                    이 댓글은 전체 공개되는 댓글입니다
                </form>
                <br><br>
            <% end %>
        </div>

        <% if current_user.id == user.id %>
            <% recipients = [] %>
            <% a.comments.each do |c| %>
                <% if c.recipient_id!= nil && c.recipient_id != user.id %>
                    <% recipients.push(c.recipient_id) %>
                <% end %>
            <% end %>
            <% recipients.uniq! %>
            <% recipients.each do |r| %>
                <div class="comments-div">
                    <div class="comments">
                        <% Comment.where(target: Answer.find(a.id), recipient_id: r).each do |c| %>
                            <div class="comment">
                                <% if c.author_id == user.id %>
                                    ㄴ
                                <% end %>
                                <%= render partial: "./user_profile_small", locals: {user: c.author} %>
                                <span style="vertical-align: +6px;">: <%= c.content %> <%= time_tag c.created_at, class: "timeago" %><br/></span>
                            </div>
                        <% end %>
                    </div>
                    <form class="prism-form friend-comment" action='/answers/<%= a.id %>/comments/<%= r %>' method='POST'>
                        ㄴ<input class="prism-form__input" type='text' name='content' />
                        <input type='submit' class="prism-form__button">
                    </form>
                </div>
                <br>
            <% end %>
            <div class="anonymous-comments-div">
                <% Comment.where(target: Answer.find(a.id), recipient_id: nil).each do |c|%>
                    <div class="comment-replies-form">
                        <div class="comment-replies">
                            <div class="comment">
                                <%= render partial: "./user_profile_general", locals: {user_id: c.author_id, answer_id: a.id} %>
                                <span style="vertical-align: +6px;">: <%= c.content %> <%= time_tag c.created_at, class: "timeago" %><br/></span>
                            </div>
                            <% Reply.where(comment_id: c.id).each do |r|%>
                                <div class="reply">
                                    ㄴ
                                    <% if r.author_id != user.id %>
                                        <%= render partial: "./user_profile_general", locals: {user_id: r.author_id, answer_id: a.id} %>
                                    <% else %>
                                        <%= render partial: "./user_comment_profile", locals: {user: c.author} %>
                                    <% end %>
                                    <span style="vertical-align: +6px;">: <%= r.content %> <%= time_tag r.created_at, class: "timeago" %><br/></span>
                                </div>
                            <% end %>
                        </div>
                        <%# TOOD: action 설정 %>
                        <form class="prism-form reply" action='/answers/comment/<%= c.id %>/reply' method='POST'>
                            ㄴ<input class="prism-form__input" type='text' name='content' />
                            <input type='submit' class="prism-form__button">
                        </form>
                    </div>
                <%end%>
            </div>
        <% else %>
            <div class="comments-div">
                <div class="comments">
                    <% Comment.where(target: Answer.find(a.id), recipient_id: current_user.id).each do |c| %>
                        <div class="comment">
                            <% if c.author.id == user.id %>
                                ㄴ
                            <% end %>
                            <%= render partial: "./user_profile_small", locals: {user: c.author} %>
                            <span style="vertical-align: +6px;">: <%= c.content %><%= time_tag c.created_at, class: "timeago" %></span><br/>
                        </div>
                    <% end %>
                </div>
                <form action='/answers/<%= a.id %>/comments/<%= current_user.id %>' method='POST' class="prism-form comment" >
                    <input class="prism-form__input" type="text" name="content">
                    <input type='submit' class="prism-form__button">
                </form> 
            </div>
        <% end %>
    </div>
</div>

<%= render 'layouts/timestamp' %>