<div class = "question-box">
    <p class = "question">
        <%= answer.question.content %>
    </p>
    <div align = "center">
        <%= form_for @answer do |f| %>
            <%= f.hidden_field :author_id, :value => current_user.id %>
            <%= f.hidden_field :question_id, :value => answer.question.id %>
            <% if @answer.persisted? %>
                <%= f.text_area :content, class: "edit-answer-field",  autofocus: true, "data-enable-grammarly": "false" %>
            <% else %>
                <%= f.text_area :content, class: "new-answer-field",  autofocus: true, "data-enable-grammarly": "false" %>
            <% end %>
            <br><br>
            <%= f.submit "저장하기", class: "answer-button"%>
        <% end %>
    </div>
</div>