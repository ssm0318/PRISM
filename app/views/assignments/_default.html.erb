<div class="assignment-content">
    <div class="prism-box-question" style="text-align: center;">
        <%=link_to question.content, question_path(question), class: "question"%>
    </div>
    <% if user_signed_in? %>
        <% if !current_user.friends.exists? %>
            친구를 만들어보세요.
        <% else %>
            <% current_user.friends.each do |friend| %>
                <div class="assignment-content-el">
                    <%= link_to image_tag(friend.image.url, :class => "assignee-profile" ), profile_path(friend) %>
                    <%= link_to friend.username, profile_path(friend), class: "assignee-name" %>
                    
                    <% assign = Assignment.find_by(question_id: question.id, assigner_id: current_user.id, assignee_id: friend.id) %>
                    <%if assign.nil? %>
                        <a  class="btn-do-assign" 
                            data-assign-id="-1"
                            data-friend-id="<%=friend.id%>" 
                            data-question-id="<%=question.id%>"
                            style="background-color: #F48462; color: white;">질문하기</a>
                    <% else %>
                        <a  class="btn-do-assign" 
                            data-assign-id="<%=assign.id%>"
                            data-friend-id="<%=friend.id%>" 
                            data-question-id="<%=question.id%>">질문취소</a>
                    <% end %>
                </div>
            <% end %>
        <% end %>
    <% end %>
</div>


 