<!-- 질문을 추가하기 위한 (어드민들만을 위한) 버튼입니다. 지우지 말아주세요. -->
<% if !current_user.nil? %>
    <% if current_user.id == 1 %>
        <%= link_to "Import All Questions", import_all_questions_path %><br>
        <%= link_to "Import New Questions", import_new_questions_path %><br><br>

            <%= form_tag(show_popular_tags_path, method: :get) do %>
                <%= text_field_tag :num %>
                <%= submit_tag '인기 태그' %>
            <% end %>
            <%= form_tag(show_popular_search_path, method: :get) do %>
                <%= text_field_tag :num %>
                <%= submit_tag '인기 검색어' %>
            <% end %>

        <h1>검색</h1>
            <%= form_tag(search_all_path, method: :get) do %>
                <%= text_field_tag :query %>
                <%= submit_tag '전부 검색' %>
            <% end %>
            <%= form_tag(search_admin_question_path, method: :get) do %>
                <%= text_field_tag :query %>
                <%= submit_tag '어드민 질문 검색' %>
            <% end %>
            <%= form_tag(search_custom_question_path, method: :get) do %>
                <%= text_field_tag :query %>
                <%= submit_tag '커스텀 질문 검색' %>
            <% end %>
            <%= form_tag(search_friend_answer_path, method: :get) do %>
                <%= text_field_tag :query %>
                <%= submit_tag '나+친구 답변 검색' %>
            <% end %>
            <%= form_tag(search_anonymous_answer_path, method: :get) do %>
                <%= text_field_tag :query %>
                <%= submit_tag '익명 답변 검색' %>
            <% end %> 
    <% end %>
<% end %>

<%= render partial: "./questions_layout", locals: {title: "오늘의 질문", questions: @questions} %><br/>