<% if !@feeds.nil? %>
    <% feeds = @feeds %>
<% end %>

<% feeds.each do |feed| %>
    <div class="prism-box">
        <div class="prism-box__header">
            <%= render partial: "./user_profile_general", locals: {user_id: feed.author_id, feed_id: feed.id} %>
        </div>
        <div class="prism-box__content"><br>
            <% if feed.is_a? Answer %>
                <%= link_to feed.question.content, question_path(feed.question.id), class: "question", :style => "font-size: 18px;"%>
            <% end %>
            <div class="answer"><%= feed.content %> <br><br></div>
            <div class = "date time"><%= time_tag feed.created_at, class: "timeago" %></div>
        </div>
        <div class="prism-box__footer" style="padding-bottom: 10px;">
            <%= render 'likes/default', target: feed, like_btn_class: "btn-feed-like" %>
            <%= render 'drawers/default', target: feed %> 
            <br>
        </div> <!--이거 처음 쓴 날짠지 업데이트한 날짠지..?-->
        <%= render 'comments/general_form', feed: feed %>
    </div>
<% end %>  