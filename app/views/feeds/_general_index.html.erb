<% feeds.each do |feed| %>
    <div class="prism-box">
        <div class="prism-box__header">
            <%= render partial: "./user_profile_general", locals: {user_id: feed.author_id, feed_id: feed.id} %>
        </div>
        <div class="prism-box__content"><br>
            <% if feed.is_a? Answer %>
                <%= link_to feed.question.content, question_path(feed.question.id), class: "question", :style => "font-size: 18px;"%><br><br>
            <% end %>
            <% if feed.is_a? CustomQuestion %>
                <% if feed.ancestor_id != nil %>reposted<% end %>
                <strong>질문<strong> <br>
            <% end %>
            <div class="answer"><%= feed.content %> <br><br></div>
            <div class = "date time"><%= time_tag feed.created_at, class: "timeago" %></div>
        </div>
        <div class="prism-box__footer">
            <%= render 'feeds/feed_footer', target: feed %>
            <% if (feed.is_a? CustomQuestion) && (feed.author != current_user) %>
                <% ancestor_id = feed.ancestor_id == nil ? feed.id : feed.ancestor_id %>
                <%= render 'custom_questions/repost', ancestor_id: ancestor_id %>
            <% end %>
        </div> <!--이거 처음 쓴 날짠지 업데이트한 날짠지..?-->
        <%= render 'comments/general_form', feed: feed %>
    </div>
<% end %>  