<% feeds.each do |feed| %>
    <div class="prism-box <%=feed.id%>">
        <div class="prism-box__header">
            <%= render partial: "./user_profile", locals: {user: feed.author} %>
            <% if current_user.id == feed.author.id %>
                <%= render 'feeds/delete_or_edit', feed: feed %>
            <% end %>
        </div>
        <div class="prism-box__content"><br>
            <% if feed.is_a? Answer %>
                <%= link_to feed.question.content, question_path(feed.question.id), class: "question", :style => "font-size: 18px;"%><br><br>
            <% end %>
            <% if feed.is_a? CustomQuestion %>
                질문
                <% if feed.reposted %>
                    reposted 
                    <% if feed.repost_message? %>
                        with message: <%= feed.repost_message %><br>
                    <% end %>
                <% end %><br>
                
            <% end %>
            <div class="answer"><%= feed.content %></div><br><br>
            <div class = "date time"><%= time_tag feed.created_at, class: "timeago" %></div>
        </div>
        <div class="prism-box__footer">
            <div class = "reactions">
                <div> 
                    <%= render 'likes/num_of_likes', target: feed %>
                    <%= render 'likes/default', target: feed, like_btn_class: "btn-feed-like" %>
                </div>
                <div>
                    <%= render 'drawers/num_of_drawers', target: feed %>
                    <%= render 'drawers/default', target: feed %>
                </div>
            </div>
            <div class="feed-channels"> 공개범위
                <% feed.channels.each do |c| %>
                    <%= c.name %>
                <% end %>
            </div>
            <% if (feed.is_a? CustomQuestion) && (feed.author != current_user) %>
                <%= render 'custom_questions/repost', parent_id: feed.id %>
            <% end %>
            <br> 
        </div>
        <div class="prism-box__comment">
            <%= render 'comments/friends_form', user: feed.author, feed: feed %>
        </div>
    </div>
<% end %> 