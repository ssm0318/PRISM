<div class="comment">
    <div class = "comment-content">
        <span>
            <% color = user_id + answer_id %>
            <% r = color * color *color % 256 %>
            <% g = (r * color) % 256 %>
            <% b = (g * color) % 256 %>
            <button style="height:20px; width:20px; border-radius:10px; margin-right: 5px; background-color: <%='rgb(' + r.to_s + ',' + g.to_s + ',' + b.to_s + ')' %>; margin-bottom: 5px; border: none;"></button>
            <span class= "content"><%= c.content %> </span>
        </span>
        <%= render 'like', a: c, target_type: "Comment", like_btn_class: "btn-comment-like" %>

    </div>

    <div class = "comment-info">
        <span><%= time_tag c.created_at, class: "timeago" %></span>
        <span>좋아요 <%= Like.where(target_type: "Comment", target_id: c.id).size %>개</span>
        <span> <%= render 'authorized_comment', c: c %></span>
    </div>
</div>