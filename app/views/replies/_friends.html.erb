<div class="reply">
    <div class="comment-content">
        <span> 
            <%= link_to image_tag(r.author.image.url, class: "user-profile"), profile_path(r.author.id) %>
            <%= link_to r.author.username, profile_path(r.author.id), class: "username" %>
            <span class = "content"><%= r.content %></span>
        </span>
        <%= render 'likes/default', target: r, like_btn_class: "btn-comment-like" %>
    </div>

    <div class = "comment-info">
        <span> <%= render 'replies/my_replies_menu', r: r %></span>
        <span class="time"><%= time_tag r.created_at, class: "timeago" %></span>
    </div>
</div>  